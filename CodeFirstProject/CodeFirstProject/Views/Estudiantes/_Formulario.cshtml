@model Logica.DataTransferObjects.EstudiantesDTO


<form>
    <div class="panel-body">
        @Html.HiddenFor(model => model.EstudianteId)

        <div class="form-group">
            <label class="control-label">Nombre</label>
            @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="control-label">Fecha Nacimiento</label>
            <div class='input-group date' id='dateNacimiento'>
                @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "form-control" } })
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
            @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="control-label">Estatura</label>
            @Html.EditorFor(model => model.Estatura, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            @Html.ValidationMessageFor(model => model.Estatura, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="control-label">Peso</label>
            @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "form-control", type = "number" } })
            @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <label class="control-label">Peso</label>
            @Html.DropDownListFor(model => model.GradoId, new SelectList(ViewBag.ListaGrados, "Id", "Value"), new { @class = "form-control selectpicker", data_live_search = "true", title = "SELECCIONE" })
            @Html.ValidationMessageFor(model => model.GradoId, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="panel-footer">
        <div class="btn btn-info" id="btnGuardarEstudiante">Guardar</div>
        <div class="btn btn-default" id="btnRegresarEstudiante">Regresar</div>
    </div>
</form>

<script src="~/Scripts/Escuela/Estudiante/formulario.js"></script>